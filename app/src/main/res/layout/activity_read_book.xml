<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/book_bg"
    tools:context=".ReadBookActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imv_book_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/walid"
            android:contentDescription="@string/book_cover"
            android:adjustViewBounds="true"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/read_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/book_cover"
                android:gravity="center"
                android:textSize="30sp"
                android:paddingStart="@dimen/card_padding_15dp"
                android:paddingEnd="@dimen/card_padding_15dp"
                android:textColor="@color/colorBlack"
                android:ellipsize="end"
                android:layout_gravity="top"
                android:lines="1"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/title_border"
                android:layout_gravity="bottom"
                android:paddingTop="25dp"
                android:contentDescription="@string/book_cover"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/by"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/read_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/book_cover"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:ellipsize="end"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/year_tag"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/read_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/book_cover"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:ellipsize="end"/>
        </LinearLayout>

        <TextView
            android:id="@+id/read_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/card_padding_15dp"
            android:textSize="20sp"
            android:text="@string/book_cover"
            android:justificationMode="inter_word"/>

    </LinearLayout>
</ScrollView>